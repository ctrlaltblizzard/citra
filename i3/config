# Set windows key as universal keybind
set $mod Mod4

# Workspaces
set $ws1 "1"
set $ws2 "2"
set $ws3 "3"

# Set window gaps
gaps inner 2
gaps outer 8

# Font declaration for window border
font pango:monospace 8

# Autostart programs/applications
exec --no-startup-id dex --autostart --environment i3
exec --no-startup-id feh --bg-scale fill ~/Pictures/vim.png 
exec_always --no-startup-id picom &

# Setting for floating window
floating_modifier $mod
tiling_drag modifier titlebar

# Keybinds
bindsym $mod+Return exec sakura
bindsym $mod+q kill
bindsym $mod+d exec --no-startup-id dmenu_run -sb '#ED7117' -nb '#000000' 
bindsym $mod+Left focus left
bindsym $mod+Down focus down
bindsym $mod+Up focus up
bindsym $mod+Right focus right
bindsym $mod+Shift+Left move left
bindsym $mod+Shift+Down move down
bindsym $mod+Shift+Up move up
bindsym $mod+Shift+Right move right
bindsym $mod+f fullscreen toggle
bindsym $mod+Shift+space floating toggle
bindsym $mod+space focus mode_toggle

# Switch to workspace 'n'
bindsym $mod+1 workspace number $ws1
bindsym $mod+2 workspace number $ws2
bindsym $mod+3 workspace number $ws3

# Move window to workspace 'n'
bindsym $mod+Shift+1 move container to workspace number $ws1
bindsym $mod+Shift+2 move container to workspace number $ws2
bindsym $mod+Shift+3 move container to workspace number $ws3

# Refresh/reload config file
bindsym $mod+Shift+c reload
bindsym $mod+Shift+r restart

# Screenshot keybind
bindsym $mod+Shift+s exec --no-startup-id scrot -s ~/Pictures/scrot-%I%M.png
bindsym Print exec --no-startup-id scrot ~/Pictures/scrot-%I%M.png

# Control brightness
bindsym XF86MonBrightnessUp exec --no-startup-id brightnessctl set +5%
bindsym XF86MonBrightnessDown exec --no-startup-id brightnessctl set 5%-

# Control audio
bindsym XF86AudioRaiseVolume exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ +5%
bindsym XF86AudioLowerVolume exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ -5%
bindsym XF86AudioMute exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ toggle

# Window border colors
client.focused #ED7117 #ED7117 #ED7117 #ED7117 
client.unfocused #B2560D #B2560D #B2560D #B2560D
client.focused_inactive #B2560D #B2560D #B2560D #B2560D 
